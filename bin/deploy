#!/usr/bin/env sh

# Run this script from site root to deploy to Github Pages.

# Build site with Grunt
echo "Building site with Grunt"
grunt -v build

# Git add
git add -A

# Git commit
git commit --allow-empty -m "$(git log -1 --pretty=%B) [ci skip]"

# Git push
git push origin source

# Grunt deploy
grunt -v deploy
